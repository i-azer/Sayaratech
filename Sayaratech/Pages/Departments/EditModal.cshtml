@page
@using Sayaratech.Localization
@using Sayaratech.Pages.Departments
@using Microsoft.Extensions.Localization
@using Volo.Abp.AspNetCore.Mvc.UI.Bootstrap.TagHelpers.Modal
@model EditModalModel
@inject IStringLocalizer<SayaratechResource> L
@{
    Layout = null;
}
<abp-dynamic-form abp-model="Department" asp-page="/Departments/EditModal">
    <abp-modal>
        <abp-modal-header title=@L["Update"]></abp-modal-header>
        <abp-modal-body>
            <abp-input asp-for="Id" />
            <abp-form-content />
        </abp-modal-body>
        <abp-modal-footer buttons="@(AbpModalButtons.Cancel|AbpModalButtons.Save)"></abp-modal-footer>
    </abp-modal>
</abp-dynamic-form>
